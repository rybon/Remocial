// Stylus docs  http//learnboost.github.com/stylus/docs/js.html
// Nib docs     http//visionmedia.github.com/nib

@import 'nib'

@import url('http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800')

html, body
  width 100%
  height 100%
  background #252525

body
  font-family 'Open Sans', sans-serif !important

active, focus
  outline 0

// VERY IMPORTANT PERFORMANCE FIX
*
  transform translate3d(0, 0, 0)

// theme overrides
header:not(.extended) ~ article
  top 0

.spacer
  height 34px

section header
  background-color #00adef

section[data-transition="slide"]:first-child > footer > *,
section[data-transition="slide"].show > footer > *
  opacity 1

section[data-transition="slide"] > header > *, section[data-transition="slide"] > footer > *
  transition none

section footer
  background-color #00adef
  box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), inset 0 -2px 0 rgba(255, 255, 255, 0.1), inset 0 -1px 0 rgba(0, 0, 0, 0.5)
  line-height 44px
  .title
    color #fff
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.2)
    margin-left 4px
    float left
    z-index -1
    font-size 1.2em
    font-weight bold
  .title.centered
    position absolute
    left 0
    right 0
    text-align center
    display inline-block
  .title.with-subtitle
    line-height 34px
    .subtitle
      position relative
      top -4px
      display block
      font-size .7em
      line-height .7em
      color white
      opacity 0.7
  nav
    display block
  nav a
    color #fff
    padding 0 6px
    min-width 30px
    z-index 1000
    float left
    height 44px
    text-align center
  nav.box.right a
    box-shadow -1px 0 0 rgba(255, 255, 255, 0.2), inset 1px 0 0 rgba(0, 0, 0, 0.2)
  nav.box:not(.right) a
    box-shadow 1px 0 0 rgba(255, 255, 255, 0.2), inset -1px 0 0 rgba(0, 0, 0, 0.2)
  :not(.icon).right
    float right
  nav.box a:active
    background rgba(0, 0, 0, 0.1)

aside article
  top 0

.list li
  border-bottom 0

article.current
  background #252525
  height 100%

aside
  height 100%

nav a .ss-icon
  font-size 1.7em
  display block
  padding-top 2px

a
  text-decoration none
  color white

.link
  color #00adef

li:active
  background rgba(0, 0, 0, 0.1)

// how-to
.how-to, .sort, .favorites
  padding-top 10px

.how-to span
  color #fff

// friends
.friends-results
  a
    display block
    background #3b5998
    color #fff
    padding 9px
    margin-bottom 10px
    font-size 1.15em
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#3b5998, 10%)

// main menu
#main-menu
  a
    display block
    padding 9px
    margin-bottom 10px
    font-size 1.15em
  #screen-connecting
    background #ff8700
    padding 9px
    height 19px
    margin-bottom 10px
    span
      display block
      background-color rgba(0, 0, 0, 0)
      border 3px solid rgba(255, 255, 255, 1)
      border-top 3px solid rgba(0, 0, 0, 0)
      border-left 3px solid rgba(0, 0, 0, 0)
      border-radius 14px
      width 14px
      height 14px
      margin auto
      animation spin .5s infinite linear

// brands
.icon-off
  font-weight 600
  color #ff4444

#vimeo
  a
    background #86c9ef
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#86c9ef, 10%)

#bottom
  position fixed
  left 0
  right 0
  bottom 0
  a
    display block
    padding 9px
    font-size 1.15em

#facebook
  a
    background #3b5998
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#3b5998, 10%)

#screen-connect
  a
    background #a4c639
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#a4c639, 10%)

#screen-disconnect
  a
    background #e54a4f
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#e54a4f, 10%)

#favorites
  a
    background #ffcc33
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#ffcc33, 10%)

#playing
  a
    background #2d75a2
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#2d75a2, 10%)

#friends
  margin-top 10px
  a
    // background #34526f
    background #3b5998
    color #fff
    i
      line-height 15px
      vertical-align text-bottom
  a:active
    background darken(#3b5998, 10%)

// search page
.search-results
  padding-bottom 45px

.search-form
  width 288px
  margin auto
  margin-top 10px
  text-align center

.search-form::before
  font-family 'SSPika'
  font-weight normal
  font-style normal
  color #ccc
  content 'üîé'
  display block
  position absolute
  left 30px
  top 9px
  font-size 14px
  z-index 20
  opacity 0.8

.search-form::after
  font-family 'SSPika'
  font-weight normal
  font-style normal
  color #ccc
  content '‚ê°'
  display block
  position absolute
  right 30px
  top 9px
  font-size 14px
  z-index 20
  opacity 0.8

.search-form.off::after
  display none

#search-query
  outline none
  padding-left 30px
  padding-right 30px
  // border-radius 15px

// remove default webkit search input styling
input[type="search"]::-webkit-search-decoration,
input[type="search"]::-webkit-search-cancel-button,
input[type="search"]::-webkit-search-results-button,
input[type="search"]::-webkit-search-results-decoration
  display none

.search-clear
  position relative
  z-index 30
  display block
  height 40px
  width 40px
  float right
  margin-top -44px
  margin-right 20px

.search-clear.off
  display none

.search-message
  text-align center
  font-weight 700
  line-height 20px
  margin-top 5px
  color #858585

.user-form::after
  font-family 'SSPika'
  font-weight normal
  font-style normal
  color #ccc
  content '‚ê°'
  display block
  position absolute
  right 10px
  top 10px
  font-size 14px
  z-index 20
  opacity 0.8

.user-form.off::after
  display none

.user-clear
  position relative
  z-index 30
  display block
  height 40px
  width 40px
  float right
  margin-top -44px
  margin-right 0px

.user-clear.off
  display none

.loader
  display block
  background-color rgba(0, 0, 0, 0)
  border 3px solid rgba(204, 204, 204, .8)
  border-top 3px solid rgba(0, 0, 0, 0)
  border-left 3px solid rgba(0, 0, 0, 0)
  border-radius 14px
  width 14px
  height 14px
  margin 0 auto
  margin-top 10px
  margin-bottom 10px
  animation spin .5s infinite linear

@keyframes spin
  to
    transform rotate(0deg)
  from
    transform rotate(360deg)

@keyframes pulse
  0%
    transform scale(1); opacity 0
  50%
    transform scale(1); opacity 1
  100%
    transform scale(1); opacity 0

#searchCache, #favoritesCache
  text-align center
  a
    color #fff
    display inline-block
    padding 0 6px
    margin 2px
    width 30px
    height 44px
    text-align center
    line-height 44px
    text-shadow 0px 1px 0px #000
    border-top 1px inset rgba(250, 250, 250, 0.1)
    border-left 1px inset rgba(250, 250, 250, 0.1)
    border-bottom 1px inset rgba(0, 0, 0, 0.5)
    border-right 1px inset rgba(0, 0, 0, 0.5)
    .ss-icon
      font-size 1.7em
      display block
      padding-top 2px
  a:active
    background rgba(0, 0, 0, 0.1)

.search-results
  .result
    max-height 90px
    overflow hidden
    text-shadow 0px 1px 0px #000
    border-top 1px inset rgba(250, 250, 250, 0.1)
    border-left 1px inset rgba(250, 250, 250, 0.1)
    border-bottom 1px inset rgba(0, 0, 0, 0.5)
    border-right 1px inset rgba(0, 0, 0, 0.5)
    .frame
      float left
      clear none
      width 100px
      height 75px
      padding 5px
      background-color rgb(26, 27, 29)
      box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
      margin-top 2px
      margin-left 3px
      margin-bottom 3px
      i
        display none
      span
        position relative
        height 12px
        width 42px
        display block
        float right
        text-align center
        margin-top -15px
        padding 1px 2px 3px 2px
        font-size 12px
        font-weight 600
        background rgba(0, 0, 0, 0.5)
        color #fff
    h3
      font-size 14px
      overflow auto
      padding 8px 10px
      font-weight 700
      line-height 20px
      color #00adef
  .result.selected
    background-color rgb(26, 27, 29)
    box-shadow inset 0px 0px 8px rgba(0, 0, 0, 0.5)
    border-top 1px inset rgba(0, 0, 0, 0.5)
    .frame
      background-color #111
      box-shadow none
      img
        position absolute
      i
        display block
        margin-top 23px
        margin-left 35px
        font-size 30px
        position absolute
        color #fff
        animation pulse 1s infinite linear
      span
        margin-top 44px
    h3
      color #fff

.player
  color #fff
  text-align center
  .info
    font-weight bold
    margin auto
    margin-top 10px
    margin-bottom 10px
    width 290px
    padding 5px
    background-color rgb(26, 27, 29)
    box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
               inset 0px 1px 2px rgba(0, 0, 0, 0.5)
    i
      vertical-align text-bottom
    img
      border 1px solid rgba(250, 250, 250, 0.1)

  h1
    font-size 1.2em
    font-weight bold
    line-height 34px
    color #00adef
  .frame
    margin auto
    img
      width 200px
      height 150px
      padding 5px
      background-color rgb(26, 27, 29)
      box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
      margin-top 2px
      margin-left 3px
      margin-bottom 3px
  .controls
    margin auto
    margin-top 10px
    a
      display inline-block
      padding 0 6px
      margin 2px
      width 30px
      height 44px
      text-align center
      line-height 44px
      text-shadow 0px 1px 0px #000
      border-top 1px inset rgba(250, 250, 250, 0.1)
      border-left 1px inset rgba(250, 250, 250, 0.1)
      border-bottom 1px inset rgba(0, 0, 0, 0.5)
      border-right 1px inset rgba(0, 0, 0, 0.5)
      .ss-icon
        font-size 1.7em
        display block
        padding-top 2px
      #play
        padding-left 2px
    a.on
      background-color rgb(26, 27, 29)
      box-shadow inset 0px 0px 8px rgba(0, 0, 0, 0.5)
      border-top 1px inset rgba(0, 0, 0, 0.5)
      #repeat
        color #33B5E5
      #star
        color #FFBB33
      #mute
        color #99CC00
      #usergroup
        color #FF4444
    a:active
      background rgba(0, 0, 0, 0.1)
  .description
    padding-top 10px
  .normal
    font-weight normal

/* slider root element */
.slider
  background rgb(26, 27, 29)
  box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
  width 300px
  height 9px
  position relative
  margin auto
  cursor pointer
  margin-top 10px
  border-radius 5px

/* progress bar (enabled with progress: true) */
.progress
  height 9px
  background-color #00adef
  box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
  border-radius 5px

/* drag handle */
.handle
  background #fff
  height 28px
  width 28px
  top -12px
  position absolute
  display block
  margin-top 1px
  border 1px solid #000
  cursor move
  box-shadow 0 0 6px #000
  border-radius 14px

/* the input field */
.range
  display none

// volume menu style fix
section.aside
  box-shadow -4px 0 8px rgba(0, 0, 0, 0.5)

#volume-menu
  background #252525

#volume-menu header
  background #252525
  box-shadow none

#volume-menu article .volumeSpacer
  margin-top 100%

/* slider root element */
.volumeSlider
  background rgb(26, 27, 29)
  box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
  height 200px
  width 9px
  position relative
  margin auto
  cursor pointer
  border-radius 5px

/* progress bar (enabled with progress: true) */
.volumeProgress
  width 9px
  position absolute
  bottom 0
  background-color #00adef
  box-shadow 0px 1px 0px 0px rgba(250, 250, 250, 0.1),
                 inset 0px 1px 2px rgba(0, 0, 0, 0.5)
  border-radius 5px

/* drag handle */
.volumeHandle
  background #fff
  height 28px
  width 28px
  top 0
  left -10px
  position absolute
  display block
  margin-top 1px
  border 1px solid #000
  cursor move
  box-shadow 0 0 6px #000
  border-radius 14px

/* the input field */
.volumeRange
  display none

/* overlay for modals */
.overlay
  background rgba(0, 0, 0, .5)
  position fixed
  top 0
  left 0
  right 0
  bottom 0
  z-index 10
  display -webkit-flex
  display flex
  -webkit-align-items center
  align-items center
  -webkit-justify-content center
  justify-content center
  .dialog
    box-sizing border-box
    position relative
    background #00adef
    width 25%
    min-width 250px
    box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2), inset 0 -2px 0 rgba(255, 255, 255, 0.1), inset 0 -1px 0 rgba(0, 0, 0, 0.5), 1px 0 0 rgba(255, 255, 255, 0.2), -1px 0 0 rgba(0, 0, 0, 0.2)
    i
      display block
      text-align center
      color white
      font-size 3em
      padding-top 5%
    p
      text-align center
      font-size 1.15em
      line-height 1.45em
      padding 2% 15% 17% 15%
      color white
      opacity 0.7
      min-height 200px
    .digit
      display inline-block
      text-align center
      min-width 15px
      padding-bottom 2px
      font-size 1.45em
      margin-left 2px
      margin-right 2px
      border-bottom 2px solid rgba(255, 255, 255, 0.7)
    .buttons-row
      position fixed
      width 100%
      bottom 0
      a
        display block
        width 50%
        padding 9px 0px 9px 0px
        float left
        text-align center
        font-family 'Open Sans', sans-serif
        font-size 1.15em
        border-top 1px solid rgba(0, 0, 0, 0.2)
        box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a:first-of-type
        box-shadow 1px 0 0 rgba(255, 255, 255, 0.2), inset -1px 0 0 rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a#alert-button
        width 100%
        box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a#prompt-button
        width 80%
        box-shadow 1px 0 0 rgba(255, 255, 255, 0.2), inset -1px 0 0 rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a#erase-button
        width 20%
        box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a.number-button
        width 20%
        box-shadow 1px 0 0 rgba(255, 255, 255, 0.2), inset -1px 0 0 rgba(0, 0, 0, 0.2), inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a.number-button:nth-of-type(5), a.number-button:nth-of-type(10)
        box-shadow inset 0 1px 0 rgba(255, 255, 255, 0.2)
      a:active
        background rgba(0, 0, 0, 0.1)

.clear
  clear both
